{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "**/*.astro"],
  "exclude": ["dist"],
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "ts-node": {
    "esm": true
  },
}